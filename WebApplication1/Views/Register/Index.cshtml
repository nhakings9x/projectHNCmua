@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/font/fontawesome-free-6.2.1-web/css/all.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.2.1-web/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/header.css" rel="stylesheet" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <link href="~/css/detail/detail.css" rel="stylesheet" />
    <link href="~/css/online-support.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/login/login.css" rel="stylesheet" />
    <link href="~/css/home/home-main.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="logo-login">
            <a href="~/">
                <img src="~/img/logo.png" />
            </a>
        </div>
        <div class="content-wrap">
            <div class="tab">
                <div class="tools">
                    <div class="btn-tab login-tab ">
                        <a href="~/login" style="text-decoration: none; color: #000">ĐĂNG NHẬP</a>
                    </div>
                    <div class="btn-tab register-tab show">ĐĂNG KÝ</div>
                </div>
                <div class="form-wrap">
                    <form class="row">
                        <div class="col-6">
                            <input type="text" placeholder="Họ *" />
                        </div>
                        <div class="col-6">
                            <input type="text" placeholder="Tên *" />
                        </div>
                        <div class="col-12">
                            <input class="email-login" placeholder="Email *" />
                        </div>
                        <div class="col-12">
                            <input class="email-login" placeholder="Số điện thoại *" />
                        </div>
                        <div class="input-box-wrap col-12">
                            <input class="password" type="password" placeholder="Mật khẩu *" />
                            <p class="password-note">*Mật khẩu dài từ 8 đến 32 kí tự, bao gồm số và chữ</p>
                        </div>
                        <div class="input-box-wrap col-12">
                            <input class="password" type="password" placeholder="Nhập lại mật khẩu *" />
                        </div>
                        <div class="checkbox-wrap">
                            <input type="checkbox" />
                            <span>Tôi đã đọc và đồng ý với <a style="font-weight: bold">điều khoản</a> của HNCmua</span>
                        </div>
                        <div class="captcha-login">
                            <div class="g-recaptcha" data-sitekey="6Ldbdg0TAAAAAI7KAf72Q6uagbWzWecTeBWmrCpJ"></div>
                        </div>
                        <input class="btn-submit" type="submit" value="Đăng ký" />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src='https://www.google.com/recaptcha/api.js'></script>
</body>
</html>
